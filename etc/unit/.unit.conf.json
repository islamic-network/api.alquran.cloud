{
  "settings": {
    "http": {
      "max_body_size": 20971520
    }
  },
  "listeners": {
    "*:8080": {
      "pass": "routes/main"
    },
    "*:9090": {
      "pass": "routes/metrics"
    }
  },
  "applications": {
    "api_alquran_cloud": {
      "type": "php",
      "user": "nobody",
      "limits": {
        "timeout": 60,
        "requests": 5000
      },
      "processes": {
        "max": 25,
        "spare": 5,
        "idle_timeout": 30
      },
      "root": "/var/www/html",
      "index": "index.php",
      "script": "index.php"
    },
    "metrics": {
      "type": "php",
      "root": "/var/www/metrics",
      "index": "metrics.php",
      "script": "metrics.php",
      "user": "root",
      "environment": {
        "control_socket": "/var/run/control.unit.sock"
      }
    }
  },
  "routes": {
    "metrics": [
      {
        "match": {
          "uri": [
            "/metrics"
          ]
        },
        "action": {
          "pass": "applications/metrics"
        }
      }
    ],
    "main": [
      {
        "match": {
          "uri": [
            "/ayah*",
            "/edition*",
            "/hizbQuarter*",
            "/juz*",
            "/manzil*",
            "/meta*",
            "/page*",
            "/ruku*",
            "/sajda*",
            "/search*",
            "/surah*"
          ]
        },
        "action": {
          "return": 301,
          "location": "/v1$request_uri"
        }
      },
      {
        "match": {
          "uri": "*"
        },
        "action": {
          "pass": "applications/api_alquran_cloud"
        }
      }
    ]
  }
}